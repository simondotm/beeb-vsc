{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
     "overrides": [
        {
            "files": [ "src/**/*.ts" ],
            "rules": {
                "no-unused-vars": "off",
                "@typescript-eslint/no-unused-vars": [
                    "warn",
                    {
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_",
                        "caughtErrorsIgnorePattern": "^_"
                    }            
                ],
                "@typescript-eslint/no-explicit-any": ["warn"],
                "indent": [
                    "error",
                    "tab"
                ],
                "no-mixed-spaces-and-tabs": [
                    "warn",
                    "smart-tabs"
                ],
                "quotes": [
                    "warn",
                    "single"
                ],
                "semi": [
                    "warn",
                    "always"
                ]
            }                
        }
    ] 
}
