{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"importHelpers": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}